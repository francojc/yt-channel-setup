{
  // VS Code Settings for YouTube Content Creation
  // Standard configuration for academic users

  // Editor basics - YouTube optimized
  "editor.fontSize": 18,
  "editor.fontFamily": "SF Mono, Monaco, 'Fira Code', 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.6,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "on",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",

  // Theme and appearance
  "workbench.colorTheme": "Monokai",
  "workbench.iconTheme": "vs-seti",
  "workbench.sideBar.location": "left",
  "window.zoomLevel": 1,

  // Terminal
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.defaultProfile.osx": "zsh",

  // Python specific
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // Formatting
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  // File explorer
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,

  // Git
  "git.enableSmartCommit": false,
  "git.confirmSync": true,

  // Extensions to recommend
  "extensions.ignoreRecommendations": false,

  // Disable telemetry for privacy
  "telemetry.telemetryLevel": "off",

  // Simple, clean UI
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "breadcrumbs.enabled": true,

  // Auto-save off (better for tutorials)
  "files.autoSave": "off",

  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/venv": true,
    "**/__pycache__": true
  }
}
